<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main background with gradient - Dark navy -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0A1F44"
                android:centerColor="#0D2550"
                android:endColor="#0A1F44"
                android:type="linear" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Subtle inner glow/highlight at top using yellow accent -->
    <item
        android:top="0dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="@android:color/transparent"
                android:centerColor="@android:color/transparent"
                android:endColor="#12FACF21"
                android:type="linear" />
            <corners android:radius="32dp" />
        </shape>
    </item>

    <!-- Yellow border accent (matching antyellow) -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#22FACF21" />
            <corners android:radius="32dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>

