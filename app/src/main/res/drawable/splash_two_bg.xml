<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Soft, on-brand background for SplashscreenTwo (navy + gold). -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>

    <!-- Subtle radial highlight to add depth behind the logo -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="520dp"
                android:centerX="0.5"
                android:centerY="0.35"
                android:startColor="#1A2D378B"
                android:endColor="#00000000" />
        </shape>
    </item>

    <!-- Warm accent wash at the bottom near the progress bar -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#00F2C94C"
                android:endColor="#24F2C94C" />
        </shape>
    </item>

</layer-list>

