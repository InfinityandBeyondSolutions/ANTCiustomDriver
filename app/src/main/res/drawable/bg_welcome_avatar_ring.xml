<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#40D4AF37"
                android:endColor="#20FACF21"
                android:type="sweep" />
            <size android:width="72dp" android:height="72dp" />
        </shape>
    </item>
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="#D4AF37" />
            <solid android:color="#0A1F44" />
        </shape>
    </item>
</layer-list>