<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navHomeDriver">

    <fragment
        android:id="@+id/navHomeDriver"
        android:name="com.ibs.ibs_antdrivers.HomeFragment"
        android:label="Driver Home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_settings"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_left"
            app:popExitAnim="@anim/fragment_slide_out_right" />

        <action
            android:id="@+id/action_home_to_store"
            app:destination="@id/navStore" />

        <action
            android:id="@+id/action_home_to_vehicleTracking"
            app:destination="@id/vehicleTrackingFragment" />
    </fragment>

    <fragment
        android:id="@+id/vehicleTrackingFragment"
        android:name="com.ibs.ibs_antdrivers.VehicleTracking"
        android:label="Vehicle Tracking" />

    <fragment
        android:id="@+id/navStore"
        android:name="com.ibs.ibs_antdrivers.DriverStoreSearch"
        android:label="Stores">
        <action
            android:id="@+id/action_driverStoreSearch_to_driverCaptureProductImages"
            app:destination="@id/driverCaptureProductImages"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_left"
            app:popExitAnim="@anim/fragment_slide_out_right" />
        <action
            android:id="@+id/action_driverStoreSearch_to_storeGallery"
            app:destination="@id/storeGallery"
            app:enterAnim="@anim/fragment_slide_in_right"
            app:exitAnim="@anim/fragment_slide_out_left"
            app:popEnterAnim="@anim/fragment_slide_in_left"
            app:popExitAnim="@anim/fragment_slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/driverCaptureProductImages"
        android:name="com.ibs.ibs_antdrivers.DriverCaptureProductImages"
        android:label="Capture Product Images">
        <argument android:name="storeId" app:argType="string" />
        <argument android:name="driverName" app:argType="string" />
        <argument android:name="storeName" app:argType="string" android:defaultValue="Unknown Store" />
    </fragment>

    <fragment
        android:id="@+id/storeGallery"
        android:name="com.ibs.ibs_antdrivers.StoreGallery"
        android:label="Store Gallery">
        <argument android:name="storeId" app:argType="string" />
        <argument android:name="storeName" app:argType="string" android:defaultValue="Unknown Store" />
    </fragment>

    <fragment
        android:id="@+id/navCallCycle"
        android:name="com.ibs.ibs_antdrivers.CallCycleFragment"
        android:label="Call Cycle" />

    <fragment
        android:id="@+id/navCatalogue"
        android:name="com.ibs.ibs_antdrivers.CatalogueFragment"
        android:label="Catalogue" />

    <fragment
        android:id="@+id/navAnnouncementsDriver"
        android:name="com.ibs.ibs_antdrivers.AnnouncementsFragment"
        android:label="Announcements" />

    <!-- Settings destination for action_home_to_settings -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ibs.ibs_antdrivers.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
