<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">
            <!-- PREMIUM HEADER SECTION - Navy gradient with gold accents -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/headerCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_main_header_gradient"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="32dp">
                    <!-- Top Row: Logo + Settings Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:adjustViewBounds="true"
                            android:contentDescription="@null"
                            android:scaleType="fitStart"
                            android:src="@drawable/bestnutlogo" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <ImageView
                            android:id="@+id/settingsIcon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@null"
                            android:padding="8dp"
                            android:src="@drawable/vector_settings"
                            app:tint="@color/webgold" />
                    </LinearLayout>
                    <!-- Welcome Section with Avatar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <!-- User Avatar with Gold Ring -->
                        <FrameLayout
                            android:layout_width="72dp"
                            android:layout_height="72dp">
                            <View
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:background="@drawable/bg_welcome_avatar_ring" />
                            <ImageView
                                android:id="@+id/userAvatar"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:background="@drawable/bg_avatar_circle_gold"
                                android:contentDescription="@null"
                                android:padding="12dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_user_avatar" />
                        </FrameLayout>
                        <!-- Welcome Text Stack -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <!-- Greeting Badge -->
                            <TextView
                                android:id="@+id/greetingBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_greeting_badge"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="4dp"
                                android:text="Good Morning"
                                android:textColor="@color/webgold"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                            <!-- Welcome Back Text -->
                            <TextView
                                android:id="@+id/welcomeText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:text="Welcome back,"
                                android:textColor="#B0FFFFFF"
                                android:textSize="14sp" />
                            <!-- User Name - Dynamic -->
                            <TextView
                                android:id="@+id/userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="Driver"
                                android:textColor="@color/white"
                                android:textSize="26sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <!-- Verified Badge -->
                        <ImageView
                            android:id="@+id/verifiedBadge"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_verified_shield"
                            app:tint="@color/webgold" />
                    </LinearLayout>
                    <!-- Date and Time Info Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <!-- Current Date Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_date_time_badge"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="10dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_calendar_outline" />
                            <TextView
                                android:id="@+id/currentDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Friday, Jan 3"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="12dp"
                            android:layout_height="0dp" />
                        <!-- Current Time Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_date_time_badge"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="10dp">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:contentDescription="@null"
                                android:src="@drawable/ic_clock_outline" />
                            <TextView
                                android:id="@+id/currentTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="09:30 AM"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- QUICK ACTIONS SECTION -->
            <TextView
                android:id="@+id/quickActionsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Quick Actions"
                android:textColor="@color/webnavy"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerCard" />
            <LinearLayout
                android:id="@+id/quickActionsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quickActionsTitle">
                <!-- Vehicle Tracking Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quick_action_card_navy"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp">
                            <View
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_action_icon_circle_gold" />
                            <ImageButton
                                android:id="@+id/vehicleTrackingBtn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:contentDescription="@null"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_car_filled"
                                app:tint="@color/webnavy" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Tracking"
                            android:textColor="@color/webgold"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!-- Messages Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/timesheetsCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quick_action_card_navy"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp">
                            <View
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_action_icon_circle_gold" />
                            <ImageButton
                                android:id="@+id/ibGoToMsg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:contentDescription="@null"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_message_filled"
                                app:tint="@color/webnavy" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Messages"
                            android:textColor="@color/webgold"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!-- Phonebook Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/supportCard"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quick_action_card_navy"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">
                        <FrameLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp">
                            <View
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_action_icon_circle_gold" />
                            <ImageView
                                android:id="@+id/btnPhonebook"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:contentDescription="@null"
                                android:padding="10dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_phone_filled"
                                app:tint="@color/webnavy" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Phonebook"
                            android:textColor="@color/webgold"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <!-- CLOCK IN/OUT SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/clockCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/quickActionsRow">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_quick_action_card_navy"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@null"
                            android:src="@drawable/ic_clock_outline" />
                        <TextView
                            android:id="@+id/clockText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:text="Clock In"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/clockStatusBadge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_greeting_badge"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Ready"
                            android:textColor="@color/webgold"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Start your shift to enable location tracking"
                        android:textColor="#99FFFFFF"
                        android:textSize="13sp" />
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClockIn"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:backgroundTint="@color/webgold"
                            android:text="Clock In"
                            android:textAllCaps="false"
                            android:textColor="@color/webnavy"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="visible"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/ic_clock_outline"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp"
                            app:iconTint="@color/webnavy" />
                        <ProgressBar
                            android:id="@+id/progressClockIn"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </FrameLayout>
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnClockOut"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:backgroundTint="#FF6B6B"
                            android:text="Clock Out"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:cornerRadius="16dp"
                            app:iconGravity="textStart"
                            app:iconPadding="12dp" />
                        <ProgressBar
                            android:id="@+id/progressClockOut"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Confetti animation overlay -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/confetti"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:translationZ="10dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_rawRes="@raw/confetti" />
            <!-- TODAY'S STATS SECTION -->
            <TextView
                android:id="@+id/statsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="Today's Overview"
                android:textColor="@color/webnavy"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/clockCard" />
            <LinearLayout
                android:id="@+id/statsRow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statsTitle">
                <!-- Status Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/llstatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quick_action_card_navy"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="14dp">
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_action_icon_circle_gold" />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_verified_shield"
                                app:tint="@color/webnavy"
                                android:contentDescription="@null" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Status"
                            android:textColor="@color/webgold"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_greeting_badge"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="Offline"
                            android:textColor="@color/webgold"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!-- Time Elapsed Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/lltime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quick_action_card_navy"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="14dp">
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_action_icon_circle_gold" />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_clock_outline"
                                app:tint="@color/webnavy"
                                android:contentDescription="@null" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Time"
                            android:textColor="@color/webgold"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvTimeElapsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/bg_greeting_badge"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:text="0 min"
                            android:textColor="@color/webgold"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <!-- Date Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp"
                    app:strokeWidth="0dp">
                    <LinearLayout
                        android:id="@+id/lldate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_quick_action_card_navy"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="14dp">
                        <FrameLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp">
                            <View
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_action_icon_circle_gold" />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="8dp"
                                android:src="@drawable/ic_calendar_outline"
                                app:tint="@color/webnavy"
                                android:contentDescription="@null" />
                        </FrameLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Shift"
                            android:textColor="@color/webgold"
