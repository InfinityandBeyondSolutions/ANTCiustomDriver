<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HomeFragment">

    <!-- Layout margins as guidelines -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp" />

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="true"
        android:contentDescription="Logo"
        android:scaleType="centerInside"
        android:src="@drawable/bestnutlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd" />

    <!-- Settings Icon -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:contentDescription="Settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/navyblue"
        android:src="@drawable/vector_settings"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="@id/gEnd" />

    <!-- Welcome text aligned with settings -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="20sp"
        android:textColor="#2A2E83"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/settingsIcon"
        app:layout_constraintBottom_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toStartOf="@id/settingsIcon"
        android:layout_marginEnd="8dp" />

    <!-- Quick actions row -->
    <LinearLayout
        android:id="@+id/quickActionsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd">

        <!-- Vehicle Tracking (keeps your existing button ID) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_marginEnd="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pastelyellow">

                <ImageButton
                    android:id="@+id/vehicleTrackingBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/pastelyellow"
                    android:contentDescription="Vehicle Tracking"
                    android:scaleType="centerInside"
                    android:src="@drawable/vehicletracking" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tracking"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Timesheets -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timesheetsCard"
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_marginEnd="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pastelyellow">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Timesheets"/>
                <!--                    android:src="@drawable/" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timesheets"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Support -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/supportCard"
            android:layout_width="0dp"
            android:layout_height="92dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pastelyellow">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Support" />
                <!--                    android:src="@drawable/ic_round_help_24" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textSize="12sp"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Clock In card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/clockCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:layout_constraintTop_toBottomOf="@id/quickActionsRow"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@color/pastelyellow">

            <!-- Title (keeps your clockText id) -->
            <TextView
                android:id="@+id/clockText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clock In"
                android:textColor="#2A2E83"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClockIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Clock In"
                android:textAllCaps="false"
                android:textColor="@color/navyblue"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/antyellow"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                android:textStyle="bold"
                android:visibility="visible"/>

                <ProgressBar
                    android:id="@+id/progressClockIn"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClockOut"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Clock Out"
                android:textAllCaps="false"
                android:textColor="@color/navyblue"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/antyellow"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                android:textStyle="bold"
                android:visibility="gone"/>


                <ProgressBar
                    android:id="@+id/progressClockOut"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </FrameLayout>


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="Status: Offline"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvClockTimes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Not clocked in"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Today stats -->
    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/clockCard"
        app:layout_constraintStart_toStartOf="@id/gStart"
        app:layout_constraintEnd_toEndOf="@id/gEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pastelyellow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deliveries"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvDeliveriesToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/confetti"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:visibility="gone"
            app:lottie_rawRes="@raw/confetti"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pastelyellow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KM Driven"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvKmToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/pastelyellow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvHoursToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>