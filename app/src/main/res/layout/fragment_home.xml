<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    tools:context=".HomeFragment">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="Logo"
        android:scaleType="centerInside"
        android:src="@drawable/bestnutlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Icon (top-right) -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:contentDescription="Settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/navyblue"
        android:src="@drawable/vector_settings"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Welcome text aligned with settings -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="22sp"
        android:textColor="#2A2E83"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/settingsIcon"
        app:layout_constraintBottom_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settingsIcon" />

    <!-- Quick actions row -->
    <LinearLayout
        android:id="@+id/quickActionsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:baselineAligned="false"
        android:weightSum="3"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/settingsIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Vehicle Tracking -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFD13D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card">

                <ImageButton
                    android:id="@+id/vehicleTrackingBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="Vehicle Tracking"
                    android:scaleType="centerInside"
                    android:src="@drawable/vehicletracking" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tracking"
                    android:textSize="12sp"
                    android:textColor="@color/navyblue"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Timesheets -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/timesheetsCard"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFD13D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Timesheets"/>
                <!-- android:src="@drawable/..." -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timesheets"
                    android:textSize="12sp"
                    android:textColor="@color/navyblue"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Support -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/supportCard"
            android:layout_width="0dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFD13D">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="Support" />
                <!-- android:src="@drawable/ic_round_help_24" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Support"
                    android:textSize="12sp"
                    android:textColor="@color/navyblue"
                    android:paddingTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Clock In card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/clockCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1AFFD13D"
        app:layout_constraintTop_toBottomOf="@id/quickActionsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/bg_clock_card">

            <TextView
                android:id="@+id/clockText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Clock In"
                android:textColor="#2A2E83"
                android:textSize="20sp"
                android:textStyle="bold" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClockIn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Clock In"
                    android:textAllCaps="false"
                    android:textColor="@color/navyblue"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/antyellow"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    android:textStyle="bold"
                    android:visibility="visible"/>

                <ProgressBar
                    android:id="@+id/progressClockIn"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClockOut"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="12dp"
                    android:text="Clock Out"
                    android:textAllCaps="false"
                    android:textColor="@color/navyblue"
                    app:cornerRadius="16dp"
                    android:backgroundTint="@color/antyellow"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progressClockOut"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Confetti overlay -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/confetti"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:visibility="gone"
        android:translationZ="10dp"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Today stats -->
    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/clockCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Status -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFD13D">

            <LinearLayout
                android:id="@+id/llstatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="16sp"
                    android:textColor="@color/navyblue"/>

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="Offline"
                    android:textSize="12sp"
                    android:textColor="@color/navyblue"
                    android:background="@drawable/bg_chip_status_neutral"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Time Elapsed -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFD13D">

            <LinearLayout
                android:id="@+id/lltime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Elapsed"
                    android:textSize="16sp"
                    android:textColor="@color/navyblue"/>

                <TextView
                    android:id="@+id/tvTimeElapsed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="0 minutes"
                    android:textSize="12sp"
                    android:textColor="@color/navyblue"
                    android:background="@drawable/bg_blue_chip"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Date -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1AFFD13D">

            <LinearLayout
                android:id="@+id/lldate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:orientation="vertical"
                android:background="@drawable/bg_stat_card">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="16sp"
                    android:textColor="@color/navyblue"/>

                <TextView
                    android:id="@+id/tvClockTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Not clocked in"
                    android:textSize="12sp"
                    android:textColor="@color/navyblue"
                    android:background="@drawable/bg_chip_time"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:visibility="visible"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
