<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ibs.ibs_antdrivers.DriverStoreSearch">

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayoutHeader"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/navyblue">


                <ImageView
                    android:id="@+id/ivBackButton"
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:src="@drawable/vectorback"
                    android:layout_gravity="start"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:elevation="4dp" />

                <TextView
                    android:id="@+id/catalogueTitle"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Store Search"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    android:background="@color/navyblue"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="13dp"
                    android:textStyle="bold">
                </TextView>


            </FrameLayout>


            <LinearLayout
                android:id="@+id/linLayoutBody"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Search View -->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <SearchView
                        android:id="@+id/svStoreSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </SearchView>

                </LinearLayout>

                <!-- Filter View -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:gravity="center"
                    android:weightSum="2">

                    <!-- Franchise Spinner -->
                    <Spinner
                        android:id="@+id/spinnerFranchise"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spingradient"
                        android:padding="10dp"/>

                    <!-- Region Spinner -->
                    <Spinner
                        android:id="@+id/spinnerRegion"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/spingradient"
                        android:padding="10dp"/>

                </LinearLayout>

                <!-- RecyclerView without ScrollView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewStores"
                    android:layout_width="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scrollbars="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>