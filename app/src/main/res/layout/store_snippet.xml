<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="7dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#1AD4AF37"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="42dp"
                android:layout_height="42dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#0A1F44"
                app:strokeColor="#1AD4AF37"
                app:strokeWidth="1dp">

                <TextView
                    android:id="@+id/storeMonogram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="@color/webgold"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Name"
                    android:textColor="@color/webnavy"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStoreID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Store ID: GN56785"
                    android:textColor="#6B7280"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/quickTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_gold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="6dp"
                android:text="STORE"
                android:textAllCaps="true"
                android:textColor="@color/webnavy"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/tvStoreAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address: 123 Street, City"
            android:textColor="#111827"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvStoreContactPerson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Manager: James Matthews"
            android:textColor="#6B7280"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/viewGalleryLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivViewGallery"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_store_action_icon"
                android:contentDescription="View gallery"
                android:padding="10dp"
                android:src="@drawable/gallery"
                app:tint="@color/webgold" />

            <View
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <ImageView
                android:id="@+id/ivCameraButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_store_action_icon"
                android:contentDescription="Capture images"
                android:padding="10dp"
                android:src="@drawable/camera"
                app:tint="@color/webgold" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
