<!-- res/layout/item_admin_contact.xml -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#33D4AF37">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:background="@color/white">

        <!-- Avatar bubble -->
        <TextView
            android:id="@+id/avatar"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="A"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/webnavy"
            android:background="@drawable/bg_circle_pastel"
            android:importantForAccessibility="no"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name Surname"
                android:textSize="18sp"
                android:textColor="@color/webnavy"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tap icons to call or email. Long-press to copy"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Icon row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageButton
                    android:id="@+id/btnCall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_admin_action_icon"
                    android:contentDescription="Call"
                    android:src="@drawable/ic_call_24"
                    android:padding="9dp"
                    app:tint="@color/webgold"/>

                <ImageButton
                    android:id="@+id/btnEmail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/bg_admin_action_icon"
                    android:contentDescription="Email"
                    android:src="@drawable/ic_email_24"
                    android:padding="9dp"
                    app:tint="@color/webgold"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
