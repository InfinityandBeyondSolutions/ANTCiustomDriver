<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/antyellow"
    android:fillViewport="true"
    tools:context="com.ibs.ibs_antdrivers.Login">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Logo at the top, responsive width -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="48dp"
            android:contentDescription="App Logo"
            android:scaleType="fitCenter"
            android:src="@drawable/bestnutlogo"
            app:layout_constraintDimensionRatio="3.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="320dp" />

        <!-- Welcome subtitle -->
        <TextView
            android:id="@+id/welcomeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/maitree_bold"
            android:text="Welcome back!"
            android:textColor="@color/navyblue"
            android:textSize="16sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logoImage" />

        <!-- Modern card container for login form -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loginCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeSubtitle"
            app:layout_constraintWidth_max="440dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <!-- Title inside card -->
                <TextView
                    android:id="@+id/loginTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/maitree_bold"
                    android:gravity="center"
                    android:text="Sign In"
                    android:textColor="@color/navyblue"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="28dp"
                    android:gravity="center"
                    android:text="Enter your credentials to continue"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <!-- Email/Username input with Material style -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email or Username"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeColor="@color/navyblue"
                    app:hintTextColor="@color/navyblue"
                    app:startIconDrawable="@android:drawable/ic_dialog_email"
                    app:startIconTint="@color/navyblue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/loginUsername"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:autofillHints="emailAddress"
                        android:fontFamily="@font/maitree_bold"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/navyblue"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password input with Material style -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordLayout"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Password"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeColor="@color/navyblue"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/navyblue"
                    app:hintTextColor="@color/navyblue"
                    app:startIconDrawable="@android:drawable/ic_lock_lock"
                    app:startIconTint="@color/navyblue">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/loginPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:autofillHints="password"
                        android:fontFamily="@font/maitree_bold"
                        android:inputType="textPassword"
                        android:textColor="@color/navyblue"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Modern login button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="28dp"
                    android:backgroundTint="@color/navyblue"
                    android:fontFamily="@font/maitree_bold"
                    android:letterSpacing="0.05"
                    android:text="Sign In"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cornerRadius="16dp"
                    app:elevation="4dp"
                    app:rippleColor="@color/antyellow" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Branding footer -->
        <TextView
            android:id="@+id/footerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/maitree_bold"
            android:text="Ace Nut Tracking"
            android:textColor="@color/navyblue"
            android:textSize="14sp"
            android:alpha="0.7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginCard"
            app:layout_constraintVertical_bias="0.3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

