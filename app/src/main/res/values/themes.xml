<resources>

    <!-- Base DayNight app theme -->
    <style name="Theme.ANTCustomAppDrivers" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand & roles -->
        <item name="colorPrimary">@color/navyblue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/webgold</item>
        <item name="colorOnSecondary">@color/webnavy</item>

        <!-- Surfaces & background come from tokens below -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
<!--        <item name="colorBackground">@color/background</item>-->
        <item name="colorOnBackground">@color/onBackground</item>

        <!-- Navigation/BottomNav defaults -->
        <item name="bottomNavigationStyle">@style/Ant.BottomNavigation</item>

        <!-- Opt-in Android Force Dark for legacy views that donâ€™t use tokens -->
<!--        <item name="android:forceDarkAllowed">true</item>-->
<!--        <item name="material3.dynamicColorAvailable">false</item>-->
    </style>

    <!-- Splash keeps your existing setup, inherits tokens -->
    <style name="Theme.ANTCustomAppDrivers.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/avd_acenutlogo</item>
        <item name="windowSplashScreenAnimationDuration">3500</item>
        <item name="postSplashScreenTheme">@style/Theme.ANTCustomAppDrivers</item>
    </style>

    <!-- Fullscreen variant you already use -->
    <style name="AppTheme.NoActionBar.Fullscreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- BottomNavigation style that respects dark/light automatically -->
    <style name="Ant.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_icon_tint</item>
        <item name="itemTextColor">@color/bottom_nav_text_tint</item>
<!--        <item name="itemActiveIndicatorColor">@color/antyellow</item>-->
        <item name="android:background">@drawable/bottom_nav_bg</item>
    </style>

</resources>
